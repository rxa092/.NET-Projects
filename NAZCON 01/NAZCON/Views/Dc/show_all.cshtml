@model IEnumerable<NAZCON.Models.ViewModel.DcModel>

@{
    ViewBag.Title = "show_all";
}

<h2>All Delivery Challan</h2>

<p>
    @Html.ActionLink("Create New", "dc_update")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.dcno)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.dono)
        </th>
